{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/Hack23/cia/schemas/politician-profile.schema.json",
  "title": "Politician Profile",
  "description": "Comprehensive profile format for Swedish parliamentary representatives",
  "version": "1.0.0",
  "type": "object",
  "required": ["id", "labels", "attributes"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for the politician",
      "pattern": "^[A-Z0-9]{8,}$"
    },
    "labels": {
      "type": "object",
      "description": "Classification and categorization",
      "required": ["category"],
      "properties": {
        "category": {
          "type": "string",
          "enum": ["politician", "mp", "minister", "former_mp"]
        },
        "subcategories": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "intelligenceTags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "attributes": {
      "type": "object",
      "description": "Core biographical and political attributes",
      "required": ["firstName", "lastName", "party"],
      "properties": {
        "firstName": {
          "type": "string",
          "minLength": 1
        },
        "lastName": {
          "type": "string",
          "minLength": 1
        },
        "party": {
          "type": "string",
          "description": "Political party affiliation"
        },
        "district": {
          "type": "string",
          "description": "Electoral district"
        },
        "birthYear": {
          "type": "integer",
          "minimum": 1900,
          "maximum": 2100
        },
        "gender": {
          "type": "string",
          "enum": ["male", "female", "other"]
        },
        "status": {
          "type": "string",
          "enum": ["active", "inactive", "retired"]
        }
      }
    },
    "activity": {
      "type": "object",
      "description": "Parliamentary activity metrics",
      "properties": {
        "documentsAuthored": {
          "type": "integer",
          "minimum": 0
        },
        "motionsSubmitted": {
          "type": "integer",
          "minimum": 0
        },
        "questionsAsked": {
          "type": "integer",
          "minimum": 0
        },
        "committeeMemberships": {
          "type": "integer",
          "minimum": 0
        }
      }
    },
    "voting": {
      "type": "object",
      "description": "Voting behavior statistics",
      "properties": {
        "totalVotes": {
          "type": "integer",
          "minimum": 0
        },
        "votesWithParty": {
          "type": "integer",
          "minimum": 0
        },
        "votesAgainstParty": {
          "type": "integer",
          "minimum": 0
        },
        "absences": {
          "type": "integer",
          "minimum": 0
        },
        "partyLoyaltyPercent": {
          "type": "number",
          "minimum": 0,
          "maximum": 100
        }
      }
    },
    "intelligence": {
      "type": "object",
      "description": "Intelligence analytics and risk assessment",
      "properties": {
        "riskScore": {
          "type": "number",
          "minimum": 0,
          "maximum": 100
        },
        "influenceScore": {
          "type": "number",
          "minimum": 0,
          "maximum": 100
        },
        "controversyLevel": {
          "type": "string",
          "enum": ["low", "medium", "high"]
        },
        "riskFlags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "committees": {
      "type": "array",
      "description": "Committee memberships",
      "items": {
        "type": "object",
        "required": ["committeeId", "committeeName"],
        "properties": {
          "committeeId": {
            "type": "string"
          },
          "committeeName": {
            "type": "string"
          },
          "role": {
            "type": "string",
            "enum": ["member", "chair", "vice_chair"]
          },
          "startDate": {
            "type": "string",
            "format": "date"
          },
          "endDate": {
            "type": "string",
            "format": "date"
          }
        }
      }
    },
    "metadata": {
      "type": "object",
      "description": "Schema and data metadata",
      "properties": {
        "schemaVersion": {
          "type": "string",
          "pattern": "^\\d+\\.\\d+\\.\\d+$"
        },
        "lastUpdated": {
          "type": "string",
          "format": "date-time"
        },
        "dataSource": {
          "type": "string"
        }
      }
    }
  }
}
